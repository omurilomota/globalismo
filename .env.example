# Configurações do Giscus (Comentários)
# Obtenha as credenciais em: https://giscus.app/pt

# Nome do repositório GitHub (ex: usuario/projeto)
NEXT_PUBLIC_GISCUS_REPO="omurilomota/globalismo"

# ID do repositório (obtido no giscus.app)
NEXT_PUBLIC_GISCUS_REPO_ID="R_kgDOM..."

# Categoria para discussões (ex: Comments, Announcements)
NEXT_PUBLIC_GISCUS_CATEGORY="Comments"

# ID da categoria (obtido no giscus.app)
NEXT_PUBLIC_GISCUS_CATEGORY_ID="DIC_kwDOM..."

# Mapeamento: "url" | "title" | "og:title" | "specific" | "number"
GISCUS_MAPPING="specific"

# Habilitar reações (1 ou 0)
GISCUS_REACTIONS_ENABLED="1"

# Enviar metadados (1 ou 0)
GISCUS_EMIT_METADATA="0"

# Posição do input: "top" | "bottom"
GISCUS_INPUT_POSITION="top"

# Tema: "light" | "dark" | "preferred_color_scheme"
GISCUS_THEME="light"

# Idioma: "pt" | "en" | "es" | etc.
GISCUS_LANG="pt"

# Newsletter (Resend)
# Obtenha a API key em: https://resend.com

# API key do Resend para envio de emails
RESEND_API_KEY="re_..."

# Email de destino para formulário de contato
CONTACT_EMAIL="contato@globalismo.com.br"

# Analytics (Umami)
# Configure em: https://umami.is/

# ID do website no Umami
NEXT_PUBLIC_UMAMI_WEBSITE_ID="..."

# URL do script do Umami (opcional, use a padrão se não especificar)
NEXT_PUBLIC_UMAMI_SCRIPT_URL="https://analytics.seu-dominio.com/script.js"
